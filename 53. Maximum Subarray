class Solution {
    public int maxSubArray(int[] nums) {
        int prev_max = nums[0];
        int curr_max = nums[0];
        for(int i=1; i<nums.length; i++) {
            curr_max = Math.max(nums[i], nums[i]+curr_max );
            prev_max = Math.max(curr_max , prev_max );
        }
        return prev_max; 
    }
}
